<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ExtensionManifest ExtensionBundleId="UberBrusher" ExtensionBundleName="UberBrusher" ExtensionBundleVersion="0.1.0" Version="4.0">
    <Author>Anton Lyubushkin [nvkzNemo]</Author> 
    <Contact mailto="nvkz.nemo@gmail.com" />
    <Abstract>
        <![CDATA[
Custom brush panel
        ]]>
    </Abstract>
    <ExtensionList>
        <Extension Id="com.nvkznemo.uberbrusher.extension" Version="0.1.0"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <!-- Photoshop -->
            <Host Name="PHSP" Version="[14.0,99.9]"/>
            <Host Name="PHXS" Version="[14.0,99.9]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="4.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.nvkznemo.uberbrusher.extension">
        <DispatchInfo>
            <Resources>
                <MainPath>./index.html</MainPath>
                <ScriptPath>./host/main.jsx</ScriptPath>
            </Resources>
            <UI>
                <Type>Panel</Type>
                <Menu>UberBrusher</Menu>
                <Geometry>
                    <Size>
                        <Height>230</Height>
                        <Width>210</Width>
                    </Size>
                    <MinSize>
                        <Height>60</Height>
                        <Width>55</Width>
                    </MinSize>
                    <!--
                    <MaxSize>
                        <Height>550</Height>
                        <Width>400</Width>
                    </MaxSize>
                    -->
                </Geometry>
                <Icons>
                    <Icon Type="Normal">./img/normal.png</Icon>
                    <!-- <Icon Type="RollOver">./img/iconRollover.png</Icon> -->
                    <Icon Type="DarkNormal">./img/darknormal.png</Icon>
                    <!-- <Icon Type="DarkRollOver">./img/iconDarkRollover.png</Icon> -->
                    <!-- <Icon Type="Disabled">./img/iconDisabled.png</Icon> -->
                </Icons>
            </UI>
        </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>